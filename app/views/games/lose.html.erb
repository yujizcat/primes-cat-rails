

<div class="game-last-banner">
  <div class="main-buttons">
    <%= link_to '返回主页' , games_backtomain_path(:game_id=> @game), method: :get %>
  </div>

  <div class="game-last-lose">

    <h1>您输了</h1>

      <h2>
        <%= "您输掉了#{@final_points}积分" %>
      </h2>
    <h1>
      <%= "本次轮数：#{@game.round}" %>
    </h1>
    <h1>
      <%= "难度：#{@game.difficulty}" %>
    </h1>
    <h1>
      <%= "本次记录" %>
    </h1>
    <h3 class="game-history">
      <% @player.current_history.each do |h|%>
        <%= h %>
          <br>
          <% end %>
    </h3>

  </div>
</div>
